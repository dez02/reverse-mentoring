mixin mentorForm()
  .container.mt-5
    .row
      .col-md-6.mx-auto
        h2.mentor-form.mt-5.text-center.bg-warning.text-white #{title}
    .row
      form.mt-5.col-md-6(action="/user/mentor/form" method="post" enctype="multipart/form-data")
        if user
          .form-group
            input.form-control.form-control(type="text" name="name" disabled="disabled" value=user.name)
          .form-group
            input.form-control.form-control(type="email" name="email" disabled="disabled" value=user.email)
          .form-group
            label(for="description") Description
            textarea(name="description" class="form-control" rows="5")=user.description
          input.text-white(type="submit" class="btn btn-warning btn-lg btn-block" value="Envoyer")
        else
          .form-group
            label(for="name") Nom
            input.form-control.form-control(type="text" name="name" placeholder="Name")
          .form-group
            label(for="email") Adresse mail
            input.form-control.form-control(type="email" name="email" placeholder="Email")
          .form-group
            label(for="password") Mot de passe
            input.form-control.form-control(type="password" name="password" placeholder="Password")
          .form-group
            label(for="description") Description
            textarea(name="description" class="form-control" rows="5")
          input(type="submit" class="btn btn-warning btn-lg btn-block" value="POSTULER POUR DEVENIR MENTOR")
      .col-md-6
        img.img-mentorform.mx-auto(src="/images/photos/rev6.jpg")



