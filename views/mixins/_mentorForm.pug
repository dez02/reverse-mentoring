mixin mentorForm()
  .container.mt-5
    h2.text-center #{title}
    form(action="/user/login" method="POST")
      .row.mt-5
        .form-group.col-md-4
          //- img.img-thumbnail(src=`/images/${user.image}`)
        .form.col-md-8
          .form-group
            input.form-control.form-control-lg(type="text" name="Name" placeholder="Name")
          .form-group
            input.form-control.form-control-lg(type="text" name="Prenom" placeholder="Pr√©nom")
          .form-group
            input.form-control.form-control-lg(type="email" name="EMail" placeholder="Email")
      .row.mt-5
        .form.col-md-8.form-group
          label(for="description") Description
          textarea(class="form-control" rows="5" style="overflow-y: scroll")

    button(type="submit" class="btn btn-secondary btn-lg ") Envoyer



