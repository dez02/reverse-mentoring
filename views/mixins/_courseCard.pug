mixin courseCard(course = {})
  .course
    .course__hero
      .course__actions
        a.course-img(href=`/courses/edit/${course._id}`)
          img.course-img(src=`/uploads/${course.photo || 'rev5.jpg'}`)
      h2.title
        a(href=`/courses/${course.slug}`) #{course.name}
    .course__details
      a.slogan(href=`/courses/${course.slug}`)
        p.slogan= course.slogan

      if user && course.mentor.equals(user._id)
        .course__action.course__action--edit
          a.edit(href=`/courses/edit/${course._id}`)
            != h.icon('pencil')
          a.delete(href=`/courses/delete/${course._id}`)
            i(class="fa fa-trash-o" aria-hidden="true")




