mixin loginForm()
  h2.text-center.mt-5 Se connecter
  form.form.mx-auto.my-5(action="/user/login" method="POST")
    .form-group
      label(for="email") Adresse mail
      input.form-control(type="email" name="email" aria-describedby="email" placeholder="Enter your email")
    .form-group
      label(for="password") Mot de passe
      input.form-control(for="password" name="password" placeholder="password")
    input.btn.btn-lg.btn-block.mt-5(type="submit" value="Se connecter")

