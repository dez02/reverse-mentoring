mixin loginForm()
  .container
    .row.pb-5
      .mx-auto.col-md-8.col-md-offset-2.col-sm-8
        .loginform
          h2.form-heading.text-center Se connecter
          form.mx-auto(action="/user/login" method="POST")
            img.form-img.rounded-circle(src="/images/reverse-mentoring.png")
            .form-group
              label(for="email") Adresse mail
              input.form-control(type="email" name="email" aria-describedby="email" placeholder="Enter your email")
            .form-group
              label(for="password") Mot de passe
              input.form-control(for="password" name="password" placeholder="password")
            .form-group
              input.btn.btn-secondary.btn-lg.btn-block.mt-5(type="submit" class="loginbutton" value="Se connecter")

